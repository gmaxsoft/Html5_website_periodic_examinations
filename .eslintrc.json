{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "jQuery": "readonly",
    "$": "readonly",
    "breakpoints": "readonly",
    "browser": "readonly"
  },
  "ignorePatterns": [
    "**/*.min.js",
    "**/jquery*.js",
    "**/fontawesome.js",
    "**/solid.js",
    "**/browser.min.js",
    "**/breakpoints.min.js",
    "**/jquery.dropotron.min.js",
    "**/jquery.scrollex.min.js",
    "dist/**",
    "node_modules/**"
  ],
  "rules": {
    "indent": "off",
    "linebreak-style": "off",
    "quotes": "off",
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "no-undef": ["error"],
    "valid-typeof": "warn"
  }
}
